{
  "name": "@ecommerce/notification-service",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "engines": {
    "node": "18.20.8",
    "npm": "10.9.2"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "cd ../.. && husky install",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "amqplib": "0.10.5",
    "express": "4.21.2",
    "pg": "8.13.1",
    "pg-hstore": "2.3.4",
    "prom-client": "15.1.3",
    "sequelize": "6.37.5",
    "uuid": "11.0.5",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@types/amqplib": "0.10.5",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.14",
    "@types/node": "18.19.68",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.2.11",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.10",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
