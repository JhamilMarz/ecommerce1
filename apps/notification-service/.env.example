# Application
NODE_ENV=development
PORT=3004

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/notification_db
DB_POOL_MAX=10
DB_POOL_MIN=2

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5674
RABBITMQ_QUEUE=notification-service-events
RABBITMQ_DLQ=notification-service-events-dlq
RABBITMQ_EXCHANGE=events
RABBITMQ_EXCHANGE_TYPE=topic

# Logging
LOG_LEVEL=info
LOG_FILE=logs/notification-service.log

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=60000

# Provider Configuration (Simulated)
EMAIL_PROVIDER_SUCCESS_RATE=0.9
WEBHOOK_PROVIDER_SUCCESS_RATE=0.9
