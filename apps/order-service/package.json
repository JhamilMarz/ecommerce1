{
  "name": "@ecommerce/order-service",
  "version": "1.0.0",
  "description": "Order Service - Microservice for order management, state machine and order history tracking",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "cd ../.. && husky install apps/order-service/.husky"
  },
  "keywords": ["ecommerce", "microservices", "orders", "state-machine", "mongodb"],
  "author": "E-commerce Team",
  "license": "MIT",
  "dependencies": {
    "express": "4.21.2",
    "helmet": "8.0.0",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "winston": "3.17.0",
    "mongoose": "8.9.3",
    "joi": "17.13.3",
    "amqplib": "0.10.5",
    "jsonwebtoken": "9.0.2",
    "prom-client": "15.1.3",
    "uuid": "11.0.4"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "18.19.68",
    "@types/cors": "2.8.17",
    "@types/amqplib": "0.10.5",
    "@types/jsonwebtoken": "9.0.7",
    "@types/uuid": "10.0.0",
    "@types/jest": "29.5.14",
    "@types/supertest": "6.0.2",
    "supertest": "7.0.0",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "eslint": "8.57.1",
    "@typescript-eslint/parser": "6.21.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "eslint-config-prettier": "9.1.0",
    "prettier": "3.4.2",
    "husky": "9.1.7",
    "lint-staged": "15.2.11",
    "mongodb-memory-server": "10.1.2"
  },
  "engines": {
    "node": "18.20.8",
    "pnpm": "9.15.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
