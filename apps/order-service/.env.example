# Server Configuration
NODE_ENV=development
PORT=3003

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/order_db
MONGODB_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=20

# JWT Configuration (must match auth-service)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=ecommerce.events
RABBITMQ_EXCHANGE_TYPE=topic
RABBITMQ_QUEUE_ORDER_EVENTS=order.events
RABBITMQ_QUEUE_PAYMENT_EVENTS=payment.events
RABBITMQ_DLQ=dead-letter-queue
RABBITMQ_MAX_RETRIES=3

# CORS Configuration
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info

# External Services (for validation - not calling directly)
PRODUCT_SERVICE_URL=http://localhost:3002
