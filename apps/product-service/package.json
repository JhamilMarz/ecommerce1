{
  "name": "@ecommerce/product-service",
  "version": "1.0.0",
  "description": "Product Service - Microservice for product catalog, categories and inventory management",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "ts-node src/infrastructure/database/migrations/run-migrations.ts",
    "db:seed": "ts-node src/infrastructure/database/seeds/run-seeds.ts"
  },
  "keywords": ["ecommerce", "microservices", "product", "catalog", "inventory"],
  "author": "E-commerce Team",
  "license": "MIT",
  "dependencies": {
    "express": "4.21.2",
    "helmet": "8.0.0",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "winston": "3.17.0",
    "sequelize": "6.37.5",
    "pg": "8.13.1",
    "pg-hstore": "2.3.4",
    "joi": "17.13.3",
    "amqplib": "0.10.5",
    "jsonwebtoken": "9.0.2",
    "prom-client": "15.1.3"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "18.19.68",
    "@types/cors": "2.8.17",
    "@types/amqplib": "0.10.5",
    "@types/jsonwebtoken": "9.0.7",
    "@types/jest": "29.5.14",
    "@types/supertest": "6.0.2",
    "typescript": "5.7.2",
    "tsx": "4.19.2",
    "ts-node": "10.9.2",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "supertest": "7.0.0",
    "eslint": "8.57.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0"
  },
  "engines": {
    "node": "18.20.8",
    "pnpm": "9.15.0"
  }
}
