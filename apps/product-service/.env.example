# Service Configuration
NODE_ENV=development
PORT=3002
SERVICE_NAME=product-service

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/product_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=product_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MAX=20
DB_POOL_MIN=5

# JWT Secret (debe coincidir con auth-service)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=900

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=ecommerce
RABBITMQ_QUEUE=product-service
RABBITMQ_DLQ=product-service-dlq
RABBITMQ_RETRY_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=5000

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
